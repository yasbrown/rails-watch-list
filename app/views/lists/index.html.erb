<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(data:image/jpeg;base64,);">
  <div class="container">
    <h1><strong>Save any kind of movies</strong></h1>
  </div>
</div>

<div class="container">
  <div class="pt-5 pb-2">
    <div class="d-flex justify-content-between align-items-center">
      <div id="index-title">
        <h2>My Lists</h2>
      </div>

      <div class="btn">
        <%= link_to "Create a movie list", new_list_path %>
      </div>
    </div>

    <div class="cards d-flex justify-content-around pt-3">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key, width: 400, height: 300, crop: :fill) %>')">
          <div class="card-items d-flex flex-column text-center">
            <p><%= link_to list.name, list_path(list) %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <hr>
</div>
