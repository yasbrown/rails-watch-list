<h1><%= @list.name %></h1>

<div>
  <h2>Bookmarks:</h2>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)"></div>

  <ul>
    <% @bookmarks.each do |bookmark| %>
      <li> <img src=<%="https://image.tmdb.org/t/p/w500#{bookmark.movie.poster_url}"%> ></li>
      <li><%= bookmark.movie.title %></li>
      <li><%= bookmark.movie.overview %></li>
      <li><%= bookmark.comment %></li>
    <% end %>
  </ul>
</div>

<img src="" alt="">

<div>
  <%= link_to "Back to lists", lists_path %>
</div>

<div>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
</div>
